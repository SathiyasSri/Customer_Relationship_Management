
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Customer Relationship Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @if (Session["Username"] != null)
            {
                @Html.Label("Welcome -", new { @class = "navbar-brand" })
                @Html.Label(@Session["UserId"].ToString(), new { @class = "navbar-brand" })
                @Html.Label(@Session["Username"].ToString(), new { @class = "navbar-brand" })
            }
            <div class="pull-right">
                @Html.ActionLink(" Logout", "Login", "Login", null, new { @class = "navbar-brand glyphicon glyphicon-log-in" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CRM</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
