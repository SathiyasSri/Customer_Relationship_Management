<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Customer Relationship Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @Html.Label("Customer Relationship Management",new { @class="navbar-brand"})
            <div class="pull-right">
                @Html.ActionLink(" Loginhere", "Login", "Login", null, new { @class = "navbar-brand glyphicon glyphicon-log-in" })
                @Html.ActionLink(" Contactus", "Contact", "Index", null, new { @class = "navbar-brand glyphicon glyphicon-earphone" })
                @Html.ActionLink(" Admin", "Login", "Admin", null, new { @class = "navbar-brand glyphicon glyphicon-user" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CRM</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
